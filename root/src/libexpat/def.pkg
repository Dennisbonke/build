PKG_NAME=libexpat
PKG_VERSION=2.2.7
PKG_URL=https://github.com/$PKG_NAME/$PKG_NAME/releases/download/R_2_2_7/expat-$PKG_VERSION.tar.gz
PKG_TARBALL=expat-$PKG_VERSION.tar.gz
PKG_ARCHIVE_DIR=expat-$PKG_VERSION
PKG_PREFIX=/usr
PKG_DEPS="mlibc"

pkg_fetch() {
    [ -f $PKG_TARBALL ] || wget $PKG_URL
    [ -d $PKG_ARCHIVE_DIR ] || tar -xf $PKG_TARBALL

    cd $PKG_ARCHIVE_DIR
    patch -p1 < ../$PKG_NAME.patch
}

pkg_build() {
    cd $PKG_ARCHIVE_DIR
    ./configure --host=x86_64-qword --prefix=$PKG_PREFIX \
    --without-xmlwf # So we evade building xmlwf's documentation.
    make
}

pkg_install() {
    cd $PKG_ARCHIVE_DIR
    make DESTDIR=$QWORD_ROOT install
}

pkg_clean() {
    rm -rf $PKG_ARCHIVE_DIR
}
