PKG_NAME=qetty
PKG_VERSION=NaN
PKG_URL=https://github.com/qword-os/qetty.git
PKG_ARCHIVE_DIR=$PKG_NAME
PKG_PREFIX=/
PKG_DEPS="mlibc"

pkg_fetch() {
    git clone $PKG_URL || true
}

pkg_build() {
    cd $PKG_ARCHIVE_DIR
    make CC=x86_64-qword-gcc 
}

pkg_install() {
    cd $PKG_ARCHIVE_DIR
    make DESTDIR=$QWORD_ROOT install
}

pkg_clean() {
    rm -rf $PKG_ARCHIVE_DIR
}
